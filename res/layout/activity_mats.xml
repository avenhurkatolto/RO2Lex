<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_base"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Mats" >

    <Button 
        android:id="@+id/button_mats_gilgamesh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location of Gilgamesh"
        android:onClick="loc_gil"
        android:layout_alignParentTop="true" 
        android:layout_alignParentLeft="true"
        android:padding="10dp"
        />
   
     <TextView
    	android:id="@+id/textview_mats_fixed1"
    	android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_mats_gilgamesh"
        android:text="Materials price in ML points: "
         android:padding="10dp"
         />
    
    <TextView
    	android:id="@+id/textview_mats_sum"
    	android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/textview_mats_fixed1"
        android:layout_below="@id/button_mats_gilgamesh"
         android:padding="10dp"
         />
    
    <ListView 
        android:id="@+id/listview_mats_mats"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        tools:listitem="@layout/mats_list_item"
         android:layout_below="@id/textview_mats_fixed1"
        android:padding="10dp"
        />   
   
</RelativeLayout>